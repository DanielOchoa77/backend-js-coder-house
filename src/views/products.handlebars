<article>
  <header>
    <h1>Te damos la bienvenida</h1>
  </header>
  <p><strong>Nombre:</strong> {{userSession.first_name}}</p>
  <p><strong>Apellido:</strong> {{userSession.last_name}}</p>
  <p><strong>Correo:</strong> {{userSession.email}}</p>
  <p><strong>Edad:</strong> {{userSession.age}}</p>
  <p><strong>Rol:</strong> {{userSession.role}}</p>
  <footer>
    <a href="/api/session/logout" role="button">Cerrar Sesión</a>
  </footer>
</article>

<h1>Lista de productos</h1>
  <table>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Precio</th>
      <th scope="col">Link imagen</th>
      <th scope="col">Codigo</th>
      <th scope="col">Stock</th>
      <th scope="col">Categoria</th>
      <th scope="col">Estado</th>
      <th scope="col">Opciones</th>
    </tr>
    <tbody>
      {{#each payload}}
      <tr>
        <td>{{this._id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td>{{this.thumbnail}}</td>
        <td>{{this.code}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.category}}</td>
        <td>{{#if this.status}}Habilitado {{else}}Deshabilitado{{/if}}</td>
         <td><button>Agregar al Carrito</button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <p>Página actual: {{page}}</p>
  <a href="{{prevLink}}" role="button" {{#unless hasPrevPage}}disabled{{/unless}}>Anterior</a>
  <a href="{{nextLink}}" role="button" {{#unless hasNextPage}}disabled{{/unless}}>Siguiente</a>