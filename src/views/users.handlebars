<h1>Lista de productos</h1>
  <table>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre Completo</th>
      <th scope="col">Correo</th>
      <th scope="col">Rol</th>
    </tr>
    <tbody>
      {{#each users}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.fullname}}</td>
        <td>{{this.email}}</td>
        <td>{{this.role}}</td>
        <td><a href="/users/premium/{{this.id}}" role="button">Cambiar Rol</a></td>
        <td><a href="/users/delete/{{this.id}}" role="button">Eliminar</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>